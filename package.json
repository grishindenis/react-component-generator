{
  "name": "generate-react-component",
  "displayName": "generate-react-component",
  "description": "Dropdown menu option of creating new Class or Pure Function for React or React Native.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.generateReactComponent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Generate React component",
      "properties": {
        "reactNativeComponents": {
          "type": "boolean",
          "default": false,
          "description": "If set to true, components generated will be for React Native."
        }
      }
    },
    "commands": [
      {
        "command": "extension.generateReactComponent",
        "title": "Create React class"
      },
      {
        "command": "extension.generateReactPureFunc",
        "title": "Create React Pure Function"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.generateReactComponent",
          "group": "z_commands"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.generateReactPureFunc",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  }
}
